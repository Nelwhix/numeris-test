{
  "openapi": "3.1.0",
  "info": {
    "title": "Numeris-Test API",
    "description": "Numeris-Test API",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "local server"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Sign up a User",
        "operationId": "a66758d5-52e9-4b18-b1de-ce05315984c5",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/UserResource"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login a User",
        "operationId": "c0906228-5167-4153-be1b-4cdd25ccf364",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/UserResource"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    },
    "/invoices": {
      "post": {
        "tags": [
          "Invoice"
        ],
        "summary": "Create an invoice",
        "operationId": "e6b7782f-7d43-438d-a63c-f8610ab0f10a",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateInvoiceRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Invoice created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/InvoiceResource"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    },
    "/invoices/widgets": {
      "get": {
        "tags": [
          "Invoice"
        ],
        "summary": "Get invoice metrics",
        "operationId": "0903cddf-a979-497d-adff-6ee359ba291a",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Invoice data retrieved successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalDraft": {
                          "type": "integer"
                        },
                        "totalOverdue": {
                          "type": "integer"
                        },
                        "totalUnpaid": {
                          "type": "integer"
                        },
                        "totalPaid": {
                          "type": "integer"
                        },
                        "totalDraftAmount": {
                          "type": "string"
                        },
                        "totalOverdueAmount": {
                          "type": "string"
                        },
                        "totalUnpaidAmount": {
                          "type": "string"
                        },
                        "totalPaidAmount": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/invoices/{invoiceId}": {
      "patch": {
        "tags": [
          "Invoice"
        ],
        "summary": "Update an invoice",
        "operationId": "71989198-9550-424d-a4e6-4f2b81d736d5",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateInvoiceRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Invoice updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/InvoiceResource"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignupRequest": {
        "title": "SignupRequest",
        "required": [
          "username",
          "email",
          "password",
          "passwordConfirmation"
        ],
        "properties": {
          "username": {
            "description": "Username",
            "type": "string"
          },
          "email": {
            "description": "User email",
            "type": "string"
          },
          "password": {
            "description": "User password",
            "type": "string"
          },
          "passwordConfirmation": {
            "description": "User password confirmation",
            "type": "string"
          }
        },
        "type": "object"
      },
      "UserResource": {
        "title": "UserResource",
        "properties": {
          "id": {
            "description": "User ID",
            "type": "string"
          },
          "type": {
            "description": "Resource type",
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "email": {
                "description": "User email",
                "type": "string"
              },
              "username": {
                "description": "Username",
                "type": "string"
              },
              "token": {
                "description": "User token",
                "type": "string"
              }
            }
          }
        },
        "type": "object"
      },
      "LoginRequest": {
        "title": "LoginRequest",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "description": "User email",
            "type": "string"
          },
          "password": {
            "description": "User password",
            "type": "string"
          }
        },
        "type": "object"
      },
      "CreateInvoiceRequest": {
        "title": "CreateInvoiceRequest",
        "required": [
          "title",
          "amount",
          "dueDate"
        ],
        "properties": {
          "title": {
            "description": "Invoice title",
            "type": "string"
          },
          "amount": {
            "description": "Invoice amount in cents",
            "type": "string"
          },
          "dueDate": {
            "description": "Invoice due date in RFC3339 format: 2024-11-08T14:25:00Z",
            "type": "string",
            "example": "2006-01-02T15:04:05+07:00"
          }
        },
        "type": "object"
      },
      "UpdateInvoiceRequest": {
        "title": "UpdateInvoiceRequest",
        "properties": {
          "title": {
            "description": "Invoice title",
            "type": "string"
          },
          "amount": {
            "description": "Invoice amount in cents",
            "type": "string"
          },
          "dueDate": {
            "description": "Invoice due date in RFC3339 format: 2024-11-08T14:25:00Z",
            "type": "string",
            "example": "2006-01-02T15:04:05+07:00"
          },
          "state": {
            "description": "Invoice State",
            "type": "string",
            "enum": ["Draft", "Overdue", "Unpaid", "Paid", "PaymentPending"]
          }
        },
        "type": "object"
      },
      "InvoiceResource": {
        "title": "InvoiceResource",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "amount": {
                "type": "integer"
              },
              "state": {
                "type": "string"
              },
              "dueAt": {
                "type": "string"
              },
              "createdAt": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
